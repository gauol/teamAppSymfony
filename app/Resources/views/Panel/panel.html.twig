{% extends '::base.html.twig' %}
{% block body %}
<div class="row">
    <div class="col-md-3 col-lg-2 bg-dark sidebar">
    {% include ':Panel:leftMenu.html.twig' %}
    </div>
    <main role="main" class="col-md-9 col-lg-10 pt-3 px-4 offset-md-3 offset-lg-2">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {% block panelBlock %}{% endblock %}
    </main>
</div>
{% endblock %}