{% extends ':Panel:panel.html.twig' %}
{% block panelBlock %}
    <h1>{{ event.getName() }}</h1>
    <div class="row">
        <div class="col-sm-12 col-lg-6 mt-1">
            <dl class="row">
                <dt class="col-sm-3">Login:</dt>
                <dd class="col-sm-9">{{ user.get() }}</dd>

                <dt class="col-sm-3">Data:</dt>
                <dd class="col-sm-9">{{ event.getDate()|date('d/m/Y') }}</dd>

                <dt class="col-sm-3">Start:</dt>
                <dd class="col-sm-9">{{ event.getStart()|date('H:i') }}</dd>

                <dt class="col-sm-3">Koniec:</dt>
                <dd class="col-sm-9">{{ event.getEnd()|date('H:i') }}</dd>
            </dl>
        </div>
    <div class="col-sm-12 col-lg-6 mt-1">
        <div class="card" style="width: 18rem;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><a href="{{ path('panelEditEvent', {'event': event.getId()}) }}">Edycja</a> </li>
            </ul>
        </div>
    </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-lg-6 mt-1">
            <div class="card">
                <div class="card-header">
                    Opis:
                </div>
                <div class="card-body">
                    {{ event.getDescription()|raw }}
                </div>
            </div>
        </div>
    <div ng-app="ngRepeat" class="col-sm-12 col-lg-6 mt-1">
        <div ng-controller="usersController">
            <div class="card mb-1">
                <div class="card-header">
                    Potwierdzeni użytkownicy:
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Imię</th>
                            <th scope="col">Nazwisko</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr ng-repeat="user in users">
                            <td>{{ '{{ user.firstname}}' }}</td>
                            <td>{{ '{{ user.lastname}}' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card mb-1">
                <div class="card-header">
                    Zaproszeni użytkownicy:
                </div>
                <div class="card-body">

                </div>
            </div>
            <div class="collapse" id="collapseExample">
                <div class="card mb-1">
                    <div class="card-header">
                        Dostępni użytkownicy:
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Imię</th>
                                    <th scope="col">Nazwisko</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="user in users">
                                    <td>{{ 'user.firstname' }}</td>
                                    <td>{{ 'user.lastname' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div> <p>
                <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                    Pokaż dostępnych użytkowników
                </a>
            </p>
        </div>
    </div>
    </div>
{% endblock %}